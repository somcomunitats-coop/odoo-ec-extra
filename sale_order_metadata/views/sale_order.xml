<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_order_form" model="ir.ui.view">
      <field name="name">sale.order.metadata.form</field>
      <field name="model">sale.order</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath
          expr="//notebook"
          position="inside"
        >
          <page name="sale_order_metadata" string="Metadata">
            <group>
              <field name="metadata_line_ids" widget="one2many_list">
                <tree create="true" edit="true" delete="true" open="false" editable="top">
                  <field name="key" readonly="False"/>
                  <field name="value" readonly="False"/>
                </tree>
              </field>
            </group>
          </page>
        </xpath>
      </field>
     </record>
  </data>
</odoo>
